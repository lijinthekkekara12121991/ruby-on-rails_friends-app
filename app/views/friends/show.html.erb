<h2>Friend details</h2>
<p class="container-fluid">
  <p>
    <strong>First name:</strong>
    <%= @friend.first_name %>
    </p>
    <p>
      <strong>Last name:</strong>
      <%= @friend.last_name %>
    </p>
    <p>
      <strong>Email:</strong>
      <%= @friend.email %>
    </p>
    <p>
      <strong>Phone:</strong>
      <%= @friend.phone %>
    </p>
  </p>
  </p>
    <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-secondary" %> |
    <%= link_to 'Back', friend_path, class: "btn btn-secondary" %><br/><br/>
    <%= button_to 'Delete', friend_path(@friend), method: :delete, class: "btn btn-danger" %>
  </p>
</p>