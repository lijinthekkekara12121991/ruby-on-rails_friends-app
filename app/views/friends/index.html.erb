<h3>Friends list</h3>

<table class="table table-striped table-light table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= button_to "Delete", friend, method: :delete, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
